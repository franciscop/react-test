{
  "name": "react-test",
  "version": "0.11.0",
  "description": "Expressive testing library for React to make sure your code works as expected. Write better code, ship fewer bugs.",
  "homepage": "https://react-test.dev/",
  "repository": "https://github.com/franciscop/react-test.git",
  "bugs": "https://github.com/franciscop/react-test/issues",
  "funding": {
    "url": "https://www.paypal.me/franciscopresencia/19"
  },
  "author": "Francisco Presencia <public@francisco.io> (https://francisco.io/)",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "docs": "node ./scripts/server.js",
    "size": "echo $(gzip -c index.min.js | wc -c) bytes",
    "start": "standard && jest --coverage --watch",
    "test": "standard && jest --coverage --detectOpenHandles",
    "lint": "standard",
    "fix": "standard --fix --verbose"
  },
  "keywords": [
    "react",
    "test",
    "testing",
    "jquery",
    "expressive",
    "act",
    "jest",
    "runner"
  ],
  "main": "index.min.js",
  "files": [],
  "dependencies": {
    "array-flat-polyfill": "^1.0.1",
    "react": "^16.9.0 || ^17.0.0",
    "react-dom": "^16.9.0 || ^17.0.0",
    "window": "^4.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "core-js": "^3.6.4",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^24.9.0",
    "react": "^16.9.0 || ^17.0.0",
    "react-dom": "^16.9.0 || ^17.0.0",
    "rollup": "^1.32.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "standard": "^16.0.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 4
          },
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": []
  },
  "standard": {
    "globals": [
      "Event"
    ],
    "env": [
      "jest"
    ]
  }
}
